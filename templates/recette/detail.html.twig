{% extends 'base.html.twig' %}

{% block title %}Hello ListeRecettesController!{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('assets/css/recettes.css')}}">
{% endblock %}

{% block header %}
<div class="logoHeader">
    <nav>
        <ul class="iconReglageDesktop">
            <li><a href="#"><img src="{{asset('assets/img/iconPng/Setting.png')}}" alt=""></a></li>
            
        </ul>
        <ul class="iconReglageSmartphone">
            <li><a href="#"><img src="{{asset('assets/img/iconPng/Setting.png')}}" alt=""></a></li>
        </ul>
        <ul class="headerMenuIcon">
                <div id="iconMenus" class="footerMiseEnPage"><li><a href="#"><img class="footNavImg" src="{{asset('assets/img/iconPng/menu.png')}}" alt="Menus">MENUS</a></li></div>
                <div id="iconListes" class="footerMiseEnPage"><li><a href="#"><img class="footNavImg" src="{{asset('assets/img/iconPng/Liste.png')}}" alt="Listes">LISTES</a></li></div>
                <div id="iconStock" class="footerMiseEnPage"><li><a href="#"><img class="footNavImg" src="{{asset('assets/img/iconPng/Stock.png')}}" alt="Stock">STOCK</a></li></div>
        </ul>
    </nav>
    <div class="logoHeader">
        <a href="{{ url('accueil') }}"><img class="logoHeader" src="{{asset('assets/img/Logo.png')}}" alt="Cook&Cool"></a>
    </div>
<style>
    .banniere {
        background-image: url("{{asset('assets/img/recettesImg/' ~ recette.photo)}}");
</style>
{% endblock %}

{% block body %}
<main>
    <section class="banniere">
        <h1 class="texte" id ="titre">{{ recette.titre }}</h1>
        
    </section>
    <section class="commande middle">
        <div class="ligneBlanche texte">
                <a href=#><img src="{{asset('assets/img/iconPng/retour.png')}}" class="commandesBottom">
                <span class="commandesTexte">Retour</span></a> - 
                <a href=#><span class="commandesTexte">Ajouter</span>
                <img src="{{asset('assets/img/iconPng/validation.png')}}" class="commandesBottom"></a>
            </div>
        <div class="ligneBlanche texte">
            <span class="commandesTexte">Nombre de personnes : </span><span id="quantite">1</span> 
            <img src="{{asset('assets/img/iconPng/plus.png')}}" class="commandesBottom" id="plus"> 
            <img src="{{asset('assets/img/iconPng/negative-sign.png')}}" class="commandesBottom" id="moins">
        </div>
            
    </section>
    <section class="ingredients">
        <table class="texte centrer">
            <tr class="gras">
                <td></td>
                <td class="desktopDetails"><h3>Temps de préparation / Cuisson</h3></td>
                <td class="desktopDetails"><h3>Difficulte</h3></td>
            </tr>
            <tr>
                <td><h3>Ingredients</h3></td>
                <td class="desktopDetails"> {{ recette.duree }} / {{ recette.cuisson }} minutes</td>
                <td class="desktopDetails"> {{ recette.difficulte }} </td>
            </tr>
            {% for ingredient in recette.ingredient %}
            <tr>
                <td><span class="personnes">{{ ingredient.quantite }}</span> {{ ingredient.ingredient.unite }} 
                    {% if ingredient.quantite > 1 %}
                {{ ingredient.ingredient.nom }}s</td>
            {% else %}
                {{ ingredient.ingredient.nom }}</td>
	    {% endif %}
            </tr>
            {% endfor %}
        </table>
    </section>


    <section class="preparation">
        <h2 class="texte">Préparation</h2>
    <ul>
        {% for ingredient in recette.ingredient %}
        <li>{{ ingredient.ingredient.etape ?? ""}}</li>
        {% endfor %}
    </ul>
    </section>
</main>
{% endblock %}

{% block javascripts %}<script src="{{asset('assets/js/detail.js')}}"> </script>{% endblock %}
