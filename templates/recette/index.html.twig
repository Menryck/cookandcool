{% extends 'base.html.twig' %}

{% block title %}Recette index{% endblock %}

{% block body %}
    <h1>Recette index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Difficulte</th>
                <th>Duree</th>
                <th>Cuisson</th>
                <th>Photo</th>
                <th>IngredientsRecette</th>
                <th>Instructions</th>
                <th>Type</th>
                <th>Categorie</th>
                <th>NbrePart</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.id }}</td>
                <td>{{ recette.titre }}</td>
                <td>{{ recette.difficulte }}</td>
                <td>{{ recette.duree }}</td>
                <td>{{ recette.cuisson }}</td>
                <td>{{ recette.photo }}</td>
                <td>{{ recette.ingredientsRecette }}</td>
                <td>{{ recette.instructions }}</td>
                <td>{{ recette.type }}</td>
                <td>{{ recette.categorie }}</td>
                <td>{{ recette.nbrePart }}</td>
                <td>
                    <a href="{{ path('recette_show', {'id': recette.id}) }}">show</a>
                    <a href="{{ path('recette_edit', {'id': recette.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recette_new') }}">Create new</a>
{% endblock %}
