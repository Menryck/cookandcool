{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('assets/css/crud.css')}}">
{% endblock %}

{% block body %}

<section class="container">
    <h1>INGREDIENT</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ingredient.nom }}</td>
            </tr>
            <tr>
                <th>Calories</th>
                <td>{{ ingredient.calories }}</td>
            </tr>
            <tr>
                <th>Unite</th>
                <td>{{ ingredient.unite }}</td>
            </tr>
            <tr>
                <th>TypeIngredient</th>
                <td>{{ ingredient.typeIngredient }}</td>
            </tr>
            <tr>
                <th>Vegan</th>
                <td>{{ ingredient.vegan ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Vegetarien</th>
                <td>{{ ingredient.vegetarien ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Gluten</th>
                <td>{{ ingredient.gluten ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Saison</th>
                <td>{{ ingredient.saison }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="miniature" src="{{asset('assets/img/ingredientsImg/' ~ ingredient.image )}}"> {{ ingredient.image }}</td>
                
            </tr>
        </tbody>
    </table>

