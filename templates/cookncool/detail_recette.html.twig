{% extends 'base.html.twig' %}

{% block title %}Recette {{ recette.titre }}{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('assets/css/recettes.css')}}">
{% endblock %}


{% block body %}
<style>
    #banniere {
        background-image: url("{{asset('assets/img/recettesImg/' ~ recette.photo)}}");
</style>

<main>
    <div class="container-header-recette">
        <section id="banniere" data-img="{{ recette.photo }}">
            <h1 class="texte" id="titre" data-id="{{ recette.id }}">{{ recette.titre }}</h1>
        </section>

        <section class="commande middle">
            <div class="ligneBlanche texte">
                <a href="{{ url('type')}}"><img src="{{asset('assets/img/iconPng/retour.png')}}" class="commandesBottom">
                    <span class="commandesTexte">Retour</span></a> -
                <a href=#><span class="commandesTexte" id="ajouter">ajouter
                    <img src="{{asset('assets/img/iconPng/validation.png')}}" class="commandesBottom"></span></a>
            </div>
            <div class="ligneBlanche texte">
                <span class="commandesTexte">Nombre de personnes : </span><span id="quantite">1</span>
                <img src="{{asset('assets/img/iconPng/plus.png')}}" class="commandesBottom" id="plus">
                <img src="{{asset('assets/img/iconPng/negative-sign.png')}}" class="commandesBottom" id="moins">
            </div>
        </section>


    </div>

    <div class="container-detail-recette">
        <section class="ingredients">
            <table class="texte centrer">
                <tr class="gras">
                    <td class="desktopDetails">
                        <h3>Temps de préparation / Cuisson</h3>
                    </td>
                    <td class="desktopDetails">
                        <h3>Difficulte</h3>
                    </td>
                </tr>

                <tr>
                    <td class="desktopDetails">
                        {{ recette.duree }} / {{ recette.cuisson }} minutes
                    </td>
                    <td class="desktopDetails">
                        {{ recette.difficulte }}
                    </td>
                </tr>
            </table>
        </section>
    </div>

    <div class="container-detail-recette">
        <section class="ingredients">
            <table class="texte centrer">
                <tr>
                    <td>
                        <h3>Ingredients</h3>
                    </td>
                </tr>
                {% for ingredient in recette.ingredient %}

                <tr>
                    <td>
                        <span class="personnes" data-mesure="{{ ingredient.quantite }}">{{ ingredient.quantite }}</span>
                        
                        <span class="nom">{{ ingredient.ingredient.nom }}</span>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </section>

        <section class="preparation">
            <h2 class="texte">Préparation</h2>
            <div class="texte">{{ recette.instructions }}</div>
        </section>
    </div>
</main>
{% endblock %}

{% block javascripts %}
<script src="{{asset('assets/js/detail.js')}}"> </script>
{% endblock %}