    background-color: #0062cc;
    border: none;
    cursor: pointer;
}





/* REGLAGES DESKTOP */
@media screen and (min-width: 1080px){
.header-contact { 
    display: flex;
    align-items: center;
    height: 80px;
    max-width: 100%;
    font-size: 20px;
    font-family: 'Roboto', 'sans-serif';
    text-align: center;
    color: #FFFF;
    background-color: #8C8C8C;
    position: fixed;
}

.titre-contact{
    font-weight: lighter;
