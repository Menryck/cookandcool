{% extends 'base.html.twig' %}

{% block title %}Stock{% endblock %}

{% block body %}
<style>
/* Roboto */
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500&display=swap');

/* REGLAGES SMARTPHONE */
header{
    background-color: #ffff;
    padding-top: 2px;
}

.header-liste-course { 
    display: flex;
    align-items: center;
    height: 50px;
    width: 100%;
    max-width: 768px;
    font-size: 14px;
    font-family: 'Roboto', 'sans-serif';
    text-align: center;
    color: #FFFF;
    background-color: #8C8C8C;
    position: fixed;
}

.titre-liste-course{
    font-weight: lighter;
    font-size: 20px;
}

.icon-print{
    width: 25px;
}

.icon-print, a{
    color: #ffff;
}

.text-print{
    display: flex;
    margin-left: 50px;
}

.icon-print{
    margin-left: 20px;
}

#affichage-liste-course{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 100%;
    margin-top: 120px;
    margin-left: 35px;
    margin-bottom: 30px;
}

.affichage-liste-course-item{
    margin-top: 65px;
    margin-left: 35px;
    margin-bottom: 30px;
    color: #000000;
    font-size: 14px;
    font-family: 'Roboto', 'sans-serif';
}



/* REGLAGES DESKTOP */
@media screen and (min-width: 1080px){
.header-liste-course { 
    display: flex;
    align-items: center;
    height: 80px;
    max-width: 100%;
    font-size: 20px;
    font-family: 'Roboto', 'sans-serif';
    text-align: center;
    color: #FFFF;
    background-color: #8C8C8C;
    position: fixed;
}

.titre-liste-course{
    font-weight: lighter;
    font-size: 35px;
}
}


/* REGLAGES TABLETTE */
@media (min-width: 768px) and (max-width: 1080px){
.titre-liste-course{
    font-weight: lighter;
    font-size: 25px;
}
}
</style>

<div class="header-liste-course">
    <h2 class="titre-liste-course">Votre stock</h2>
</div>

<div id="affichage-liste-course">

<form class="was-validated">
<div class="custom-control custom-checkbox mb-3">
    <input type="checkbox" class="custom-control-input" id="customControlValidation1" required>
    <label class="custom-control-label" for="customControlValidation1">nom du produit</label>
    <div class="invalid-feedback">le produit n'est pas valider</div>
</div>
</form>

</div>

{% endblock %}
